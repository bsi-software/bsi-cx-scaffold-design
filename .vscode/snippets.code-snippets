    "Styling for Custom Form Feedback": {
        "scope": "css, less",
        "prefix": "cssformfeedback",
        "body": [
            "form .missing-required-field {\r",
            "  border-color: red;\r",
            "}\r",
            "\r",
            "#required-missing-feedback {\r",
