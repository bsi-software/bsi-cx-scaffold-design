            "        <o:PixelsPerInch>96</o:PixelsPerInch>\r",
            "    </o:OfficeDocumentSettings>\r",
            "  </xml>\r",
            "  </noscript>\r",
            "  <![endif]-->\r",
            "\r",
            "  {# INFO_COMMENT  custom CSS is added here, but the template should exclusively rely on inline CSS  #} \r",
            "  <style type=\"text/css\">\r",
            "  \r",
            "    body,\r",
            "    table,\r",
            "    td,\r",
            "    a {\r",
            "      -webkit-text-size-adjust: 100%;\r",
            "      -ms-text-size-adjust: 100%;\r",
            "    }\r",
